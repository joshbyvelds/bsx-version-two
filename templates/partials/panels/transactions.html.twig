<div class="transactions panel small_panel">
    <div class="title">Transactions</div>
    
    {% for transaction in transactions %}
        <div class="transaction">
            <div class="type" data-type="{{ transaction.type }}"></div><!--
         --><div class="title">
                <span class="name">{{ transaction.name }}</span>

                {% if transaction.type == 5 %}
                    <span class="amount">-{{ transaction.convertCdn }}</span> / <span class="amount green">{{ transaction.convertUsd }}</span>
                {% elseif transaction.type == 6 %}
                    <span class="amount green">{{ transaction.convertCdn }}</span> / <span class="amount">-{{ transaction.convertUsd }}</span>
                {% else %}
                    <span class="amount {% if transaction.amount > 0 %}green{% endif %}">{{ transaction.amount }}</span>
                {% endif %}
            </div><!--
         --><div class="date">{{ transaction.date|date("m/d/Y") }}</div>
        </div>
    {% endfor %}
</div>