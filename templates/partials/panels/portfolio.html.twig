    <div class="status">
        <div class="money">{{ amount }}</div>
        <div class="gainbox">
            <span class="title">Gain</span>
            <div class="amount_wrapper">
                <div class="amount">+${{ gain_total }}</div>
                <div class="amount">&#129045;{{ gain_total_percent }}%</div>
            </div>
        </div><!--
