{% extends 'base.html.twig' %}

{% block title %}BSX - Dashboard{% endblock %}

{% block body %}
    {{ form(form) }}
    {% if error %}
        <br />
        {{ error }}
    {% endif %}

    <script>
        $(() => {
            $("#option_sell_average, #option_sell_contracts").on("change", function(){
                var total = (((parseFloat($("#option_sell_average").val()) * 100) * parseInt($("#option_sell_contracts").val())) - (parseInt($("#option_sell_contracts").val())) * 1.25) - 9.95;
                $("#option_sell_total").val(total);
            });
        });
    </script>
{% endblock %}